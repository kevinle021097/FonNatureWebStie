@model Models.Entity.Dictionary
@{
    ViewBag.Title = "Edit dictionary";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="wrapper">
    <div class="form-w3layouts">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Tạo mới Dictionary
                        <span class="tools pull-right">
                        </span>
                    </header>
                    <div class="panel-body">
                        <div class="form">
                            @using (Html.BeginForm("Edit", "DictionaryAdmin", FormMethod.Post, new { @class = "cmxform form-horizontal", @id = "signupForm" }))
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group ">
                                    <label class="control-label col-lg-3">Key</label>
                                    <div class="col-lg-6">
                                        @Html.ValidationMessageFor(model => model.Key, "", new { @class = "text-danger" })
                                        @Html.EditorFor(model => model.Key, new { htmlAttributes = new { @class = "form-control", @type = "text", @readonly = "readonly" } })
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="control-label col-lg-3">Value</label>
                                    <div class="col-lg-6">
                                        @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                                        @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-lg-offset-3 col-lg-6">
                                        <button class="btn btn-primary" type="submit">Save</button>
                                        <form>
                                            <input class="btn btn-default" type="button" onclick="window.location.href = '/Admin/DictionaryAdmin/Dictionaries';" value="Cancel" />
                                        </form>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

