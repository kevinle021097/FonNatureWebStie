@model List<Models.Entity.Footer>
@{
    List<Models.Entity.FooterCategory> footerCategories = ViewBag.FooterCategories;
    Models.Entity.Contact contact = ViewBag.Contact;
}
<!--Footer section start-->
<footer class="footer-section section bg-dark">

    <!--Footer Top start-->
    <div class="footer-top section pt-100 pt-lg-80 pt-md-70 pt-sm-60 pt-xs-50 pb-45 pb-lg-25 pb-md-15 pb-sm-5 pb-xs-0">
        <div class="container">
            <div class="row row-25">
                <!--Footer Widget start-->
                @foreach (var cate in footerCategories)
                {
                    <div class="footer-widget col-lg-3 col-md-6 col-sm-6 col-12 mb-40 mb-xs-35">
                        <h4 class="title"><span class="text">@cate.name</span></h4>
                        <ul class="ft-menu">
                            @foreach (var item in Model)
                            {
                                if (item.typeId == cate.id)
                                {
                                    <li><a href="@item.link">@item.text</a></li>
                                }
                            }
                        </ul>
                    </div>
                }
                <!--Footer Widget end-->
                <!--Footer Widget start-->
                    <div class="footer-widget col-lg-3 col-md-6 col-sm-6 col-12 mb-40 mb-xs-35">
                        <h4 class="title"><span class="text">Contact us</span></h4>
                        <ul class="address">
                            <li>
                                <i class="fa fa-home"></i><span>@contact.Address</span>
                            </li>
                            <li><i class="fa fa-phone"></i><span><a href="#">@contact.MobilePhone</a></span></li>
                            <li><i class="fa fa-envelope-o"></i><span><a href="#">@contact.Email</a></span></li>
                        </ul>
                        @*<div class="footer-social">
                            <a href="@contact.LinkFaceBook" class="facebook"><i class="fa fa-facebook"></i></a>
                            <a href="@contact.LinkInstagram" class="instagram"><i class="fa fa-instagram"></i></a>
                        </div>*@
                        @Html.Raw(contact.FacebookPagePlugin)
                        @*<div class="fb-page" data-href="https://www.facebook.com/fondekao/" data-tabs="" data-width="300" data-height="" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/fondekao/" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/fondekao/">FON de Kao - Mỹ phẩm thiên nhiên</a></blockquote></div>*@
                        <div class="payment-box mt-15 mb-15">
                            <a href="#"><img src="/Asset/Client/images/payment.png" alt=""></a>
                        </div>
                    </div>
                <!--Footer Widget end-->
            </div>
        </div>
    </div>
    <!--Footer Top end-->
    <!--Footer bottom start-->
    <div class="footer-bottom section">
        <div class="container ft-border pt-40 pb-40 pt-xs-20 pb-xs-20">
            <div class="row justify-content-between align-items-center">
                <div class="col-lg-6 col-md-6 col-sm-8">
                    <div class="copyright text-left">
                        <p>Copyright &copy;2019 <a href="/">Theface</a>. All rights reserved.</p>
                    </div>
                </div>
                @{Html.RenderAction("FooterLogo", "Home");}
            </div>
        </div>
    </div>
    <!--Footer bottom end-->

</footer>
<!--Footer section end-->
