@model Models.Entity.Contact
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}

@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })

        var editor = CKEDITOR.replace('txtContact', {
            customConfig: '/Asset/Admin/js/Plugin/ckeditor/config.js',
        });

        CKFinder.setupCKEditor(null, '/Assets/js/Plugin/ckfinder');

    </script>
    <!--Alert success-->
    <script>
        $(document).ready(function (c) {
            $('#btnEdit').on('click', function (c) {
                var Address = $("#Address").val();
                var MobilePhone = $("#MobilePhone").val();
                var Email = $("#Email").val();
                console.log(Address);
                console.log(MobilePhone);
                console.log(Email);
                var model = { Address, MobilePhone, Email };
                console.log(model);
                $.ajax({
                    url: "/Admin/ContactAdmin/Edit",
                    data: { Contact: model },
                    dataType: "json",
                    type: "POST",
                    success: function (status) {
                        console.log(status);
                        if (status == true) {
                            $("#alertContactStatus").removeClass("hidden");
                            $("#alertContactStatus").delay(2000).slideUp().promise().done(function () {
                                $("#alertContactStatus").hide().slideDown();
                                $("#alertContactStatus").addClass("hidden");
                            });
                        }
                        else {
                            $("#alertFailStatus").removeClass("hidden");
                            $("#alertFailStatus").delay(2000).slideUp().promise().done(function () {
                                $("#alertFailStatus").hide().slideDown();
                                $("#alertFailStatus").addClass("hidden");
                            });
                        }
                    }
                });
            });
        });
    </script>
}

